<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--server action to send mail for automated action-->
        <record id="action_send_delivery_notification" model="ir.actions.server">
            <field name="name">Send Delivery Notification</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="binding_model_id" ref="stock.model_stock_picking"/>
            <field name="state">code</field>
            <field name="code">
            if records:
                action = records.action_send_delivery_mail()
            </field>
        </record>
    </data>
</odoo>