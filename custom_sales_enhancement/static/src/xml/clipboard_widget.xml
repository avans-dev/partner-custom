<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="custom_sales_enhancement.ClipboardCharField" owl="1">
        <div class="clipboard-char-field d-flex align-items-center"
             t-att-class="{'o_field_highlight': props.isHighlighted}">

            <!-- Input field -->
            <input class="o_input flex-grow-1"
                t-att-id="props.id"
                t-att-name="props.name"
                t-att-placeholder="props.placeholder"
                t-att-maxlength="props.maxLength"
                t-att-readonly="props.readonly || isReadonly"
                t-att-disabled="props.disabled"
                t-model="props.record.data[props.name]"
                t-on-change="(ev) => props.record.update({[props.name]: ev.target.value})"
                t-on-input="(ev) => props.record.update({[props.name]: ev.target.value})"
                t-on-blur="props.onBlur"
                t-on-focus="props.onFocus"
                t-ref="input"
            />

            <!-- Copy button -->
            <button
                type="button"
                class="clipboard-btn btn btn-sm btn-outline-info ms-2"
                t-if="!isReadonly and hasValue"
                t-on-click="copyToClipboard"
                title="Copy to clipboard"
                t-ref="clipboard"
            >
                <i class="fa fa-copy me-1"></i>
                Copy
            </button>
        </div>
    </t>

</templates>